# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=8000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/carbon-capture
MONGODB_TEST_URI=mongodb://localhost:27017/carbon-capture-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=30d

# AI Engine Configuration
AI_ENGINE_URL=http://localhost:5000
AI_ENGINE_API_KEY=your-ai-engine-api-key

# Email Configuration (for notifications)
EMAIL_FROM=noreply@carboncapture.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Configuration (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Carbon Credit Configuration
CARBON_CREDIT_BASE_PRICE=25
CARBON_CREDIT_CURRENCY=USD

# API Keys (for external services)
OPENWEATHER_API_KEY=your-openweather-api-key
CARBON_PRICING_API_KEY=your-carbon-pricing-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Blockchain Configuration
BLOCKCHAIN_NETWORK=mainnet
INFURA_PROJECT_ID=your-infura-project-id
ETHERSCAN_API_KEY=your-etherscan-api-key

# IoT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance

# Feature Flags
ENABLE_AI_OPTIMIZATION=true
ENABLE_BLOCKCHAIN_INTEGRATION=false
ENABLE_MARKETPLACE=true
ENABLE_REAL_TIME_MONITORING=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30000
DATABASE_CONNECTION_POOL_SIZE=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30